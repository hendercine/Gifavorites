<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/deepPurple500</item>
        <item name="colorPrimaryDark">@color/deepPurple900</item>
        <item name="colorAccent">@color/deepPurple200</item>
        <item name="secondaryColor">@color/green500</item>
        <item name="secondaryDarkColor">@color/green900</item>
        <item name="secondaryLightColor">@color/green200</item>
        <item name="primaryTextColor">@color/white</item>
        <item name="secondaryTextColor">@color/black</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">false</item>
        <item name="android:background">@color/deepPurple900</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopUpOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="AppTheme.AppBarTitle"
           parent="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">sans-serif-condensed</item>
        <item name="android:background">@color/deepPurple500</item>
    </style>

    <style name="AppTheme.Thumbnail">
        <item name="android:scaleType">centerCrop</item>
    </style>

</resources>
